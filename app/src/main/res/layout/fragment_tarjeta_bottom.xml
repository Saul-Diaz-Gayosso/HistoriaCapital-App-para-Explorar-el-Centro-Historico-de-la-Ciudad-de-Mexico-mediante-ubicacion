<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="200sp"
                android:layout_height="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="100sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="100sp"
                android:background="@color/white"
                android:elevation="10dp" />

            <ImageView
                android:id="@+id/imv_url"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:scaleType="centerCrop"
                android:src="@drawable/img1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16sp">
            <View
                android:layout_width="350sp"
                android:layout_height="2sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="100sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="8sp"
                android:layout_marginEnd="100sp"
                android:background="@color/black"
                android:elevation="10sp" />

            <!-- Texto o contenido adicional -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Title"
                android:textSize="22sp"
                android:layout_marginBottom="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/bookmark" />

                <ImageView
                    android:id="@+id/route"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/route" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/estrella1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/estrella2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/estrella3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/estrella4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/estrella5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/star_empty" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Score"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/speaker"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/speaker" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="P.za de la Constitución S/N, Centro Histórico de la Cdad. de México, Centro, Cuauhtémoc, 06010 Ciudad de México, CDMX"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_clock" />

                <TextView
                    android:id="@+id/horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09:00 a 15:00 hrs."
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_ticket" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ticket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entrada / Acceso. Así obtiene acceso a este lugar"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/idNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Visita el sitio web"
                            android:textColor="@color/blue"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtViewPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:textStyle="bold"
                        android:text="0 MX$"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_world" />

                <TextView
                    android:id="@+id/linkSitio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue"
                    android:text="historico.alcaldiacuauhtemoc.mx/nope/zocalo-plaza-de-la-constitucion"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_call" />

                <TextView
                    android:id="@+id/telefonoSitio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="55 5345 8000"
                    android:textColor="@color/blue"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_museum" />

                <TextView
                    android:id="@+id/historiaSitio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Descubre la historia de este sitio"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</androidx.core.widget.NestedScrollView>
