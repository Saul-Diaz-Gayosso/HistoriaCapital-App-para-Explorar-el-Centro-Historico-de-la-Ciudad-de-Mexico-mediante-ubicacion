<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_button">

    <ImageView
        android:id="@+id/divide2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/line"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textViewTituloNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/FadedBlack"
        android:textSize="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Cambiado de TextView a LinearLayout para contener párrafos -->
    <LinearLayout
        android:id="@+id/textViewNoticiaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:id="@+id/imageViewNoticia"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewEnlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/blue"
        android:textSize="14dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="15dp"
        android:text="Para leer más, haga clic aquí..."
        android:autoLink="web" />

    <ImageView
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/line"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop" />
</LinearLayout>
