<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_margin="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/rounded_button">


    <ImageView
        android:id="@+id/divide2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/line"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_ticket"/>
        <TextView
            android:id="@+id/ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrada / Acceso. Así obtiene acceso a este lugar"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/link_compra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visita el sitio web"
        android:textColor="@color/blue"
        android:layout_marginLeft="47dp"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_clock" />

        <TextView
            android:id="@+id/horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="09:00 a 15:00 hrs."
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

    <ImageView

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_world" />

        <TextView
            android:id="@+id/link_sitio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="historico.alcaldiacuauhtemoc.mx/nope/zocalo-plaza-de-la-constitucion"
            android:textColor="@color/blue"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_call" />

        <TextView
            android:id="@+id/telefonoSitio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="55 5345 8000"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/bookmark_full" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="¡Sitio guardado!"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/divide"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/line"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop" />

</LinearLayout>
