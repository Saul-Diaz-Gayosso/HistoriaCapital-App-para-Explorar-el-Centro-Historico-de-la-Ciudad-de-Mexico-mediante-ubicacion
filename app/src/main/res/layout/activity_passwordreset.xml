<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/banner_arriba"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:scaleType="fitXY"
            android:src="@color/green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Centro Histórico de la Ciudad de México"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#F8F0F0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBackarrow"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:src="@drawable/arrowback_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="316dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/containerSignUp"
                android:background="@drawable/background_rounded_shadow"
                android:scaleType="fitXY"
                android:src="@color/white" />

            <LinearLayout
                android:id="@+id/containerSignUp"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/lock_icon" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/montserratbold"
                    android:text="¿Tienes problema para entrar?"
                    android:textColor="@color/FadedBlack"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtVNombre"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Introduzca su correo electrónico y le enviaremos un enlace para que acceda nuevamente a su cuenta."
                    android:textColor="@color/FadedBlack"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/layoutContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/EdtEmail"
                        android:layout_width="230dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="43dp"
                        android:layout_marginEnd="43dp"
                        android:background="@drawable/background_rounded_black_border"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"/>


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="49dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Correo electrónico"
                        android:textColor="@color/grey"
                        android:textSize="10dp" />

                </RelativeLayout>


                <Button
                    android:id="@+id/btnAcceso"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@drawable/btn_reset_password"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/ptsans"
                    android:text="Enviar enlace de acceso"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/divide_line" />

                <Button
                    android:id="@+id/BtnSignUp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@drawable/btn_background_selector"
                    android:fontFamily="@font/ptsans"
                    android:text="Crear cuenta nueva"
                    android:textColor="@drawable/btn_text_color_selector"
                    android:background="@drawable/rounded_button"
                    android:textSize="15dp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>